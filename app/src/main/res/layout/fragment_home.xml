<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.homeFragment.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_underwaterpicture" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/soli_tem_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/text_soli_tem"
                    android:textSize="@dimen/textSize2" />

                <TextView
                    android:id="@+id/soli_tem_data_tv"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLength="8"
                    android:text="- -"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSize2" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/soli_hum_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/text_soli_hum"
                    android:textSize="@dimen/textSize2" />

                <TextView
                    android:id="@+id/soli_hum_data_tv"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLength="8"
                    android:text="- -"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSize2" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#22000000" />

            <LinearLayout
                android:id="@+id/fishtank_tem_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/text_fishtank_tem"
                    android:textSize="@dimen/textSize2" />

                <TextView
                    android:id="@+id/fishtank_tem_data_tv"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLength="8"
                    android:text="- -"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSize2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fishtank_ph_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/text_fishtank_PH"
                    android:textSize="@dimen/textSize2" />

                <TextView
                    android:id="@+id/fishtank_ph_data_tv"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLength="8"
                    android:text="- -"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSize2" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#22000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:gravity="center"
                android:text="喂食"

                android:textSize="@dimen/textSize2" />

            <!--喂食选择器-->
            <com.example.gzgj_iotvideoplatform.view.AmountView
                android:id="@+id/feed_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                app:btnTextSize="14sp"
                app:btnWidth="36dp"
                app:tvWidth="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="克"
                android:textSize="@dimen/textSize2" />

            <Button
                android:id="@+id/feed_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="执行"
                android:textSize="@dimen/textSize2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:gravity="center"
                android:text="定时"

                android:textSize="@dimen/textSize2" />

            <!--定时选择器-->
            <com.example.gzgj_iotvideoplatform.view.AmountView
                android:id="@+id/timing_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                app:btnTextSize="14sp"
                app:btnWidth="36dp"
                app:tvWidth="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="天"
                android:textSize="@dimen/textSize2" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <EditText
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"

                android:gravity="center"
                android:text="时"
                android:textSize="@dimen/textSize2" />

            <EditText
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"

                android:gravity="center"
                android:text="分"
                android:textSize="@dimen/textSize2" />

            <EditText
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"

                android:gravity="center"
                android:text="秒"
                android:textSize="@dimen/textSize2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="是否定时喂食"
                android:textSize="@dimen/textSize2" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#22000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水循环"
                    android:textSize="@dimen/textSize2" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>